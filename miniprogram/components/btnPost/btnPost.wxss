.movable-area{
  /* // 这个属性设置为none,让所有事件穿透过去 */
  pointer-events:none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  right:0;
  bottom: 0;
}
.movable-view{ 
  /* // 重设为auto,覆盖父属性设置 */
  pointer-events:auto;
  height: 50px;
  width: 50px;
  /* background: red; */
}
.movable-view image{
  width: 50rpx;
  height: 50rpx;
  z-index:2;
}

