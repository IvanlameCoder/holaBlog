/* 评论 */
.commentBox{
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.commentBox image{
  width: 50rpx;
  height:50rpx;
}
.commentPart{
  width:600rpx;
  height: 50rpx;
  background-color: rgb(236, 236, 236);
  border-top:1rpx solid rgb(236, 236, 236) ;
  border-radius: 10rpx;
  /* box-shadow: -5rpx -5rpx 1rpx 6rpx rgb(189, 188, 188); */
}
/*遮罩层 */  
.shade{
  width:100%;   
