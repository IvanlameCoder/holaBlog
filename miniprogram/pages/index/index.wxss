}
.mainBox{
  margin-left:25rpx;
  padding: 10rpx 0px;
}
.commentAndlike{
  display: flex;
  flex-shrink: 1;
  justify-content: space-around;
  align-items: center;
  border-top:1rpx solid rgb(235, 235, 235);
}
